package be.vdab.presentation;
import java.util.Arrays;
import java.util.List;

import be.vdab.entities.Persoon;
import be.vdab.enums.PersoonEigenschap;

public class PersoonViewer {
	private final PersoonEigenschap[] eigenschappen;
	
	public PersoonViewer(PersoonEigenschap[] eigenschappen){
		this.eigenschappen = eigenschappen;
	}
	
	public void Afbeelden(List<Persoon> lijst){
		for(Persoon persoon : lijst){
			List<PersoonEigenschap> eigenschappenlist = Arrays.asList(eigenschappen);
			if(eigenschappenlist.contains(PersoonEigenschap.PERSOON_NR)){
				System.out.print(persoon.getPersoonNr() + " ");
			}
			if(eigenschappenlist.contains(PersoonEigenschap.VOORNAAM)){
				System.out.print(persoon.getVoornaam() + " ");
			}
			if(eigenschappenlist.contains(PersoonEigenschap.FAMILIENAAM)){
				System.out.print(persoon.getFamilienaam() + " ");
			}
			if(eigenschappenlist.contains(PersoonEigenschap.AANTAL_KINDEREN)){
				System.out.print(persoon.getAantalKinderen() + " ");
			}
			System.out.println();
		}
	}
	
	public void tooneigenschap(Persoon persoon, PersoonEigenschap eigenschap){
		switch (eigenschap) {
		case PERSOON_NR:
			System.out.println(persoon.getPersoonNr());
			break;
		case VOORNAAM:
			System.out.println(persoon.getVoornaam());
			break;
		case FAMILIENAAM:
			System.out.println(persoon.getFamilienaam());
			break;
		case AANTAL_KINDEREN:
			System.out.println(persoon.getAantalKinderen());
			break;
		}
		
	}
}
