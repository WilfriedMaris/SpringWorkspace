package be.vdab.repositories;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

import be.vdab.entities.Persoon;

public class PersoonRepositoryMeerdereRegels implements PersoonRepository {
	private final String txt;
	
	public PersoonRepositoryMeerdereRegels(String txt){
		this.txt = txt;
	}

	@Override
	public List<Persoon> findAll() {
		try(Scanner scanner = new Scanner(new File(txt))){
			List<Persoon> personen = new ArrayList<>();
			if(scanner.hasNextLine()){
				String next = scanner.nextLine();
				Persoon persoon = new Persoon()
				personen.add(
						new Persoon(
								Integer.parseInt(next),next,next,Integer.parseInt(next)));
			}
			return personen;
		} catch (FileNotFoundException ex) {
			ex.printStackTrace();
			return null;
		}
	}

}
