package be.vdab;

import java.util.ArrayList;
import java.util.List;

import org.springframework.context.support.ClassPathXmlApplicationContext;

import be.vdab.entities.Persoon;

public class main {

	public static void main(String[] args) {
		Persoon persoon1 = new Persoon(2, "Dennis", "Maris", 101);
		Persoon persoon2 = new Persoon(4, "Willy", "Maris", 102);
		Persoon persoon3 = new Persoon(8, "Linda", "Maris", 103);
		List<Persoon> lijst = new ArrayList<>();
		lijst.add(persoon1);
		lijst.add(persoon2);
		lijst.add(persoon3);

		try(ClassPathXmlApplicationContext context = 
				new ClassPathXmlApplicationContext("container.xml")){
			context.getBean("persoonViewer", PersoonViewer.class).Afbeelden(lijst);
		}

	}

}
